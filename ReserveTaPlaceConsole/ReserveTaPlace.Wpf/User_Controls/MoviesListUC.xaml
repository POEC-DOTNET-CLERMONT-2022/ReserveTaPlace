    <Grid>
    <ListBox x:Name="LVMovies" Height="400" ItemsSource="{Binding Movies}" >
        <ListBox.ItemsPanel>
            <ItemsPanelTemplate>
                    <WrapPanel DataContext="{Binding CurrentMovie}" HorizontalAlignment="Left">

                    </WrapPanel>
                </ItemsPanelTemplate>
        </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <materialDesign:Card Width="200">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="200" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Image Source="{Binding Poster}" Height="140" Width="196" Stretch="UniformToFill" />
                            <materialDesign:PackIcon  Kind="Theater" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 0 16 120" x:Name="IconOnTheater"/>
                            <StackPanel Grid.Row="1" Margin="8 24 8 0">
                                <TextBlock HorizontalAlignment="Center" Text="{Binding Title}" />
                                <TextBlock FontWeight="Bold">Plot :</TextBlock>
                                <TextBlock TextWrapping="Wrap" VerticalAlignment="Center" Text="{Binding Plot}" />
                            </StackPanel>
                        </Grid>
                    </materialDesign:Card>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>
    </Grid>
