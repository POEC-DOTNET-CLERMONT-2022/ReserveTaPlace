<Window x:Class="ReserveTaPlace.Wpf.MovieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReserveTaPlace.Wpf"
        mc:Ignorable="d"
        Title="MovieWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="0" SelectedItem="{Binding CurrentMovie}" ItemsSource="{Binding Movies}" x:Name="LBMovies">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text ="Titre : " />
                        <TextBlock Text ="{Binding Title}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
            </ListBox>
        <StackPanel Grid.Column="1">
            <TextBlock Text="{Binding CurrentMovie.Title}" />
            <TextBlock Text="{Binding CurrentMovie.Plot}" />
            <TextBlock Text="{Binding CurrentMovie.ImdbId}" />

        </StackPanel>
    </Grid>
</Window>
